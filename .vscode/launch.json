{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "development"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Debug (Production)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "info"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "production"
            },
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Debug (Custom Port)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8080",
                "--reload",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "development"
            },
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}
