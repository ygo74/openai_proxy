{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "development",
                "LOG_LEVEL": "DEBUG",
                "DEVELOPMENT_MODE": "true"
            },
            "python": "${workspaceFolder}/venv/fastapi/Scripts/python.exe",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Debug (Production)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "info"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "production"
            },
            "python": "${workspaceFolder}/venv/fastapi/Scripts/python.exe",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Debug (Custom Port)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.ygo74.fastapi_openai_rag.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8080",
                "--reload",
                "--log-level",
                "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ENV": "development",
                "LOG_LEVEL": "DEBUG",
                "DEVELOPMENT_MODE": "true"
            },
            "python": "${workspaceFolder}/venv/fastapi/Scripts/python.exe",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Attach to debugpy",
            "type": "python",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "justMyCode": false
          },
          {
            "name": "RAG Client CLI Debug",
            "type": "python",
            "request": "launch",
            "module": "ygo74.fastapi_openai_rag_client",
            "args": [
                "user",
                "list"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/client",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/client/src",
                "LOG_LEVEL": "DEBUG"
            },
            "python": "${workspaceFolder}/venv/fastapi_client/Scripts/python.exe",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}
